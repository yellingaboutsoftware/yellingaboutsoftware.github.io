---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>{{ site.name }}</title>
 <subtitle>{{ site.subtitle }}</subtitle>
 <link href="http://yellingaboutsoftware.com/atom.xml" rel="self"/>
 <link href="http://yellingaboutsoftware.com/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://yellingaboutsoftware.com/</id>
 <author>
   <name>Yelling About Software</name>
   <email>yellingaboutsoftware@gmail.com</email>
 </author>
 
 {% for post in site.posts limit:25 %}
 <entry>
   <title>{{ post.title | xml_escape }}</title>
   <link href="http://yellingaboutsoftware.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://yellingaboutsoftware.com{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>
